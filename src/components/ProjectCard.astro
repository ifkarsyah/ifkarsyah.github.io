---
interface Props {
  title: string;
  description: string;
  domain: string;
  stack: string[];
  slug: string;
  featured?: boolean;
  link?: string;
}

const { title, description, domain, stack, slug, featured, link } = Astro.props;
---

<a href={`/projects/${slug}`} class="card project-card">
  <div class="card-header">
    <h3 class="card-title">{title}</h3>
    {featured && <span class="badge-featured">Featured</span>}
  </div>
  <p class="card-description">{description}</p>
  <div class="card-footer">
    <div class="tags">
      <span class="tag domain">{domain}</span>
      {stack.slice(0, 3).map(item => (
        <span class="tag stack">{item}</span>
      ))}
    </div>
    {link && <span class="card-link-icon" title="View project">â†—</span>}
  </div>
</a>
