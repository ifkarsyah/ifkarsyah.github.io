---
interface TechItem {
  name: string;
  icon: string;
  level?: string;
}

interface Props {
  categories: Record<string, TechItem[]>;
}

const { categories } = Astro.props;

const categoryLabels: Record<string, string> = {
  languages: 'Languages',
  data_processing: 'Data Processing',
  databases: 'OLAP / Warehouses',
  infrastructure: 'Infrastructure',
  tools: 'Tools & DevOps',
};

const levelOrder = ['Proficient', 'Familiar', 'Learning'];

function groupByLevel(items: TechItem[]): Record<string, TechItem[]> {
  const groups: Record<string, TechItem[]> = {};
  for (const item of items) {
    const level = item.level ?? 'Other';
    if (!groups[level]) groups[level] = [];
    groups[level].push(item);
  }
  return groups;
}
---

<div class="techstack">
  {Object.entries(categories).map(([key, items]) => {
    const groups = groupByLevel(items);
    const sortedLevels = levelOrder.filter(l => groups[l]);
    return (
      <div class="techstack-category">
        <h4 class="techstack-category-title">{categoryLabels[key] ?? key}</h4>
        <div class="techstack-levels">
          {sortedLevels.map(level => (
            <div class="techstack-level-row">
              <span class={`level-label level-${level.toLowerCase()}`}>{level}</span>
              <div class="techstack-items">
                {groups[level].map(item => (
                  <div class="techstack-item">
                    <span class="techstack-icon">{item.icon}</span>
                    <span class="techstack-name">{item.name}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    );
  })}
</div>

<style>
  .techstack {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .techstack-category-title {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .techstack-levels {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .techstack-level-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 2rem;
  }

  .level-label {
    font-size: 0.78rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    width: 7rem;
    flex-shrink: 0;
  }

  .level-proficient { color: var(--accent); }
  .level-familiar   { color: #34d399; }
  .level-learning   { color: #fbbf24; }

  .techstack-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
    flex: 1;
  }

  .techstack-item {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 0.3rem 0.7rem;
    font-size: 0.85rem;
    color: var(--text-primary);
    transition: border-color var(--transition);
    white-space: nowrap;
  }

  .techstack-item:hover {
    border-color: var(--border-hover);
  }

  .techstack-icon {
    font-size: 1rem;
    line-height: 1;
  }

  .techstack-name {
    font-weight: 500;
  }
</style>
