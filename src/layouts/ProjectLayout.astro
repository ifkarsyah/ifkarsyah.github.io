---
import BaseLayout from './BaseLayout.astro';
import TagList from '../components/TagList.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: string;
    domain?: string;
    stack?: string[];
    link?: string;
    image?: string;
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
});
---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
  <article class="project-detail">
    <header class="project-header">
      <div class="project-meta">
        <span class="text-muted text-sm">{formattedDate}</span>
        {frontmatter.link && (
          <a href={frontmatter.link} target="_blank" rel="noopener" class="btn btn-outline" style="font-size: 0.85rem; padding: 0.35rem 0.8rem;">
            View Project ↗
          </a>
        )}
      </div>
      <h1>{frontmatter.title}</h1>
      <p class="project-description">{frontmatter.description}</p>
      {(frontmatter.domain || frontmatter.stack?.length) && <TagList domain={frontmatter.domain} stack={frontmatter.stack} />}
    </header>

    <hr class="divider" />

    <div class="prose">
      <slot />
    </div>

    <div style="margin-top: 2.5rem;">
      <a href="/projects/" class="btn btn-outline">← Back to Projects</a>
    </div>
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: 72ch;
  }

  .project-header {
    margin-bottom: 0;
  }

  .project-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .project-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0.5rem 0 1rem;
    line-height: 1.6;
  }

  /* Prose styles for markdown content */
  .prose :global(h2) {
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .prose :global(h3) {
    font-size: 1.1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .prose :global(p) {
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1rem;
  }

  .prose :global(li) {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }
</style>
