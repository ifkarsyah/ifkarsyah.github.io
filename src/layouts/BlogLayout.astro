---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import BaseLayout from './BaseLayout.astro';
import TagList from '../components/TagList.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    author?: string;
    tags: string[];
    image?: { src: ImageMetadata; alt: string };
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={new Date(frontmatter.pubDate).toISOString()}>{formattedDate}</time>
        {frontmatter.author && <span>·</span>}
        {frontmatter.author && <span>{frontmatter.author}</span>}
      </div>
      <h1>{frontmatter.title}</h1>
      <p class="post-description">{frontmatter.description}</p>
      <TagList tags={frontmatter.tags} />
    </header>

    {frontmatter.image && (
      <div class="post-image">
        <Image src={frontmatter.image.src} alt={frontmatter.image.alt} width={900} height={280} />
      </div>
    )}

    <div class="prose">
      <slot />
    </div>

    <div style="margin-top: 2.5rem; display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
      <a href="/blog/" class="btn btn-outline">← Back to Blog</a>
      <TagList tags={frontmatter.tags} />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 72ch;
  }

  .post-header {
    margin-bottom: 1.5rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .post-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0.5rem 0 1rem;
    line-height: 1.6;
  }

  .post-image {
    margin: 1.5rem 0 2rem;
    border-radius: var(--radius);
    overflow: hidden;
    border: 1px solid var(--border);
  }

  .post-image img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    display: block;
  }

  /* Prose styles for markdown content */
  .prose :global(h2) {
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
    color: var(--text-primary);
  }

  .prose :global(h3) {
    font-size: 1.1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .prose :global(p) {
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1.25rem;
    color: var(--text-secondary);
  }

  .prose :global(li) {
    line-height: 1.6;
    margin-bottom: 0.4rem;
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }
</style>

